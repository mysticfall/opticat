{
  "name": "opticat",
  "description": "Functional programming API for writing games.",
  "author": {
    "name": "Xavier Cho",
    "email": "mysticfallband@gmail.com",
    "url": "https://github.com/mysticfall/opticat"
  },
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "opticat.umd.js",
  "module": "opticat.es.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "build": "vite build && tsc -p tsconfig.prod.json --emitDeclarationOnly && copyfiles package.json dist",
    "doc": "typedoc",
    "test": "vitest --no-watch",
    "coverage": "vitest --coverage --no-watch",
    "make-badges": "istanbul-badges-readme"
  },
  "dependencies": {
    "@fp-ts/optic": "^0.22.0",
    "fp-ts": "^2.16.2",
    "io-ts": "^2.2.21",
    "io-ts-numbers": "^1.1.1",
    "io-ts-types": "^0.5.19",
    "langchain": "^0.1.20",
    "marked": "^12.0.0",
    "gray-matter": "^4.0.3",
    "html-entities": "^2.4.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "typedoc": "^0.25.8",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.0",
    "@vitest/coverage-v8": "^1.3.0",
    "istanbul-badges-readme": "^1.8.5",
    "copyfiles": "^2.4.1",
    "husky": "^9.0.11"
  },
  "keywords": [
    "typescript",
    "game-framework",
    "functional-programming"
  ]
}
